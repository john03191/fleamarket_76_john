<div class="user-sign__up">
  <div class="header_logo">
    <%= image_tag 'logo/logo.png' %>
  </div>

  <div class="user-sign__up__title">
    <h2>会員情報入力</h2>
  </div>

  <div class="user-sign__up__form">
    <%= form_for(@user, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: @user %>
      <div class="user-sign__up__form__content">
        <div class="field">
          <label>ニックネーム</label>
          <span class="form-require">必須</span><br>
          <%= f.text_field :nickname, placeholder:"例）ふりーまん", required:"required", class:"input-form" %>
        </div>

        <div class="field">
          <label>メールアドレス</label>
          <span class="form-require">必須</span><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可", required:"required", class:"input-form" %>
        </div>

        <div class="field">
          <label>パスワード</label>
          <span class="form-require">必須</span><br>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"7文字以上の半角英数字", required:"required", class:"input-form" %>
          <p class="note">※英字と数字の両方を含めて設定してください</p>
        </div>

        <div class="field">
          <label>確認用パスワード</label>
          <span class="form-require">必須</span><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"7文字以上の半角英数字", required:"required", class:"input-form" %>
        </div>

        <div>
          <p id="identification">本人確認</p>
          <p class="single-text">安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。</p>
        </div>

        <div class="field">
          <label>お名前(全角)</label>
          <span class="form-require">必須</span><br>
          <%= f.text_field :last_name, placeholder:"例）佐藤", required:"required", class:"input-form__name" %>
          <%= f.text_field :first_name, placeholder:"例）祐介", required:"required", class:"input-form__name" %>
        </div>
      
        <div class="field">
          <label>お名前かな(全角)</label>
          <span class="form-require">必須</span><br>
          <%= f.text_field :last_name_kana, placeholder:"例）さとう", required:"required", class:"input-form__name" %>
          <%= f.text_field :first_name_kana, placeholder:"例）ゆうすけ", required:"required", class:"input-form__name" %>
        </div>

        <div class="field">
          <label>電話番号</label>
          <span class="form-require">必須</span><br>
          <%= f.text_field :telephone, placeholder:"11桁の数値を入力してください", required:"required", class:"input-form" %>
        </div>

        <div class="field">
          <label>生年月日</label>
          <span class="form-require">必須</span><br>
          <%= f.text_field :birthyear, autofocus: true, placeholder:"----", required:"required", class:"input-form__birth" %>年
          <%= f.text_field :birthmonth, autofocus: true, placeholder:"--", required:"required", class:"input-form__birth" %>月
          <%= f.text_field :birthday, autofocus: true, placeholder:"--", required:"required", class:"input-form__birth" %>日
        </div>

        <p class="note">※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>

        <div class="actions">
          <%= f.submit "次へ進む", class:"red-btn" %>
        </div>
      <% end %>
      </div> <!-- user-sign__up__form__content -->
  </div> <!-- user-sign__up__form -->
</div> <!-- user-sign__up -->





