<h2>商品送付先住所登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <label>送付先氏名（全角）</label>
    <%= f.text_field :last_name, placeholder:"例）権田原" %>
    <%= f.text_field :first_name, placeholder:"例）龍之介" %>
  </div>

  <div class="field">
    <label>送付先氏名（かな）</label>
    <%= f.text_field :last_name_kana, placeholder:"例）ごんだわら" %>
    <%= f.text_field :first_name_kana, placeholder:"例）りゅうのすけ" %>
  </div>

  <div class="field">
    <label>郵便番号</label>
    <%= f.text_field :post_cord, placeholder:"例）123-4567" %>
  </div>

  <div class="field">
    <label>都道府県</label>
    <%= f.text_field :prefecture_id, placeholder:"東京都" %>
  </div>

  <div class="field">
    <label>市区町村</label>
    <%= f.text_field :city, placeholder:"渋谷区" %>
  </div>

  <div class="field">
    <label>番地</label>
    <%= f.text_field :address, placeholder:"富ケ谷１丁目" %>
  </div>

  <div class="field">
    <label>マンション・ビル名 ※部屋番号は任意</label>
    <%= f.text_field :building, placeholder:"〇〇ビル〇〇号室" %>
  </div>

  <div class="field">
    <label>電話番号 ※任意</label>
    <%= f.text_field :building, placeholder:"09012345678" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>