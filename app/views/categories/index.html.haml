= render partial: "items/header"
- breadcrumb :categories
= render "layouts/breadcrumbs"

.category__container
  .category__container--top
    %h3
      カテゴリー一覧
    - @parents.each_with_index do |parent, i|
      - unless parent.name.include?("カテゴリー一覧")
        = link_to "##{i}", class: "box__parent--link" do
          = parent.name
  - @parents.each_with_index do |parent, i|
    - unless parent.name.include?("カテゴリー一覧")
      .category__container--box
        .category__container--box--title{id: "#{i}"}
          = parent.name
        .category__box--child
          - parent.children.each do |child|
            .child__box
              .child__box--name
                = child.name  
              .grandchild__box
                - child.children.each do |grandchild,|
                  .grandchild__link
                    - unless grandchild.name.include?("すべて")
                      = link_to "#", class: "category__link--btn" do
                        = grandchild.name
        .top-btn
          = link_to "#" do
            = fa_icon("arrow-up")
            トップページへ
= render partial: "items/aside"
= render partial: "items/footer"